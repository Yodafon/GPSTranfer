<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gpstransfer.MainPage">

    <Button
        android:text="Start"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:id="@+id/button_start" android:layout_marginRight="25dp" app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/log_window" android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.523" app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="37dp"/>
    <Button
        android:text="Stop"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:id="@+id/button_stop" android:layout_marginRight="25dp" app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/log_window"
        android:layout_marginLeft="8dp" app:layout_constraintHorizontal_bias="0.523" android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/button_start"/>
    <TextView
        android:layout_width="253dp"
        android:layout_height="502dp"
        android:id="@+id/log_window" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="6dp"
        android:layout_marginRight="8dp" app:layout_constraintRight_toRightOf="parent" android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintHorizontal_bias="0.056"/>
    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="378dp"
        android:layout_height="41dp"
        android:id="@+id/progressBar" android:layout_marginTop="21dp"
        app:layout_constraintTop_toBottomOf="@+id/log_window" android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"/>
</android.support.constraint.ConstraintLayout>
